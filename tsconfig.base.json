{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cows-will-fly/elements/common-ui": [
        "libs/elements/common-ui/src/index.ts"
      ],
      "@cows-will-fly/elements/external": [
        "libs/elements/external/src/index.ts"
      ],
      "@cows-will-fly/features/auth": ["libs/features/auth/src/index.ts"],
      "@cows-will-fly/features/cart": ["libs/features/cart/src/index.ts"],
      "@cows-will-fly/features/checkout": [
        "libs/features/checkout/src/index.ts"
      ],
      "@cows-will-fly/features/cookies": ["libs/features/cookies/src/index.ts"],
      "@cows-will-fly/features/home": ["libs/features/home/src/index.ts"],
      "@cows-will-fly/features/products": [
        "libs/features/products/src/index.ts"
      ],
      "@cows-will-fly/interfaces/cart": ["libs/interfaces/cart/src/index.ts"],
      "@cows-will-fly/interfaces/product": [
        "libs/interfaces/product/src/index.ts"
      ],
      "@cows-will-fly/interfaces/user": ["libs/interfaces/user/src/index.ts"],
      "@cows-will-fly/state/auth": ["libs/state/auth/src/index.ts"],
      "@cows-will-fly/state/cart": ["libs/state/cart/src/index.ts"],
      "@cows-will-fly/state/checkout": ["libs/state/checkout/src/index.ts"],
      "@cows-will-fly/state/local-storage": [
        "libs/state/local-storage/src/index.ts"
      ],
      "@cows-will-fly/state/products": ["libs/state/products/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
